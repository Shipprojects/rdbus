{
    "version": 3,
    "cmakeMinimumRequired": {
      "major": 3,
      "minor": 21,
      "patch": 0
    },
    "configurePresets": [
        {
            "name": "Common",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "Release",
            "displayName": "Release",
            "description": "Release configuration",
            "inherits": [ "Common" ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            },
            "binaryDir": "${sourceDir}/build/Release"
        },
        {
            "name": "Testing",
            "displayName": "Testing",
            "description": "Testing configuration",
            "inherits": [ "Common" ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Testing",
                "WITH_GMOCK": "ON"
            },
            "binaryDir": "${sourceDir}/build/Testing"
        },
        {
            "name": "Debug",
            "displayName": "Debug",
            "description": "Debug configuration",
            "inherits": [ "Common" ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            },
            "binaryDir": "${sourceDir}/build/Debug"
        }
    ],
    "buildPresets": [
        {
            "name": "Common",
            "hidden": true,
            "targets":[
                "all",
                "rdbus",
                "lib_rdbus",
                "rdbus_tests"
            ],
            "jobs": 20
        },
        {
            "name": "Release build",
            "configurePreset": "Release",
            "inherits": [ "Common" ]
        },
        {
            "name": "Testing build",
            "configurePreset": "Release",
            "inherits": [ "Common" ],
            "targets":[
                "lib_rdbus",
                "rdbus_tests"
            ]
        },
        {
            "name": "Debug build",
            "configurePreset": "Debug",
            "inherits": [ "Common" ]

        }
    ]
}